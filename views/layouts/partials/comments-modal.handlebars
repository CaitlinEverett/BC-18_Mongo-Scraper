<!--comments Modal-->

<div class="modal fade modalcomment" id="commentModal{{this._id}}" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">comments for {{this.title}}</h4>
            </div>
            <div class="modal-body">
                {{#if this.comments}}
                    {{#each this.comments}}
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <p class="previouscomments"> {{this.body}}</p>
                                <button type="button" class="btn btn-danger deletecomment" data-comment-id={{this._id}} data-article-id={{this.article}}>X</button>
                            </div>
                        </div>
                    {{/each}}
                {{else}}
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <h4>No comments for this article yet.</h4>
                        </div>
                    </div>
                {{/if}}
                <div class="form-group">
                    <textarea id="commentText{{this._id}}" class="form-control" rows="4" placeholder="New comment"></textarea>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary savecomment" data-id={{this._id}}>Save comment</button>
            </div>
        </div>
    </div>
</div>